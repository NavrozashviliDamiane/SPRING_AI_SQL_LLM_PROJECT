{
  "name": "Car Dealer NL2SQL Backend",
  "description": "Spring Boot backend for car dealer NL2SQL queries with dashboard APIs",
  "repository": "https://github.com/yourusername/SQLMLProject",
  "keywords": [
    "java",
    "spring-boot",
    "openai",
    "nl2sql",
    "postgresql"
  ],
  "buildpacks": [
    {
      "url": "heroku/java"
    }
  ],
  "env": {
    "DB_URL": {
      "description": "PostgreSQL database URL",
      "value": "jdbc:postgresql://localhost:5432/car_dealer"
    },
    "DB_USERNAME": {
      "description": "PostgreSQL username",
      "value": "postgres"
    },
    "DB_PASSWORD": {
      "description": "PostgreSQL password",
      "required": true
    },
    "OPENAI_API_KEY": {
      "description": "OpenAI API key for NL2SQL conversion",
      "required": true
    }
  },
  "services": [
    {
      "name": "db",
      "engine": "PG",
      "version": "12",
      "production": true,
      "envs": [
        {
          "key": "POSTGRES_DB",
          "value": "car_dealer"
        },
        {
          "key": "POSTGRES_USER",
          "value": "postgres"
        },
        {
          "key": "POSTGRES_PASSWORD",
          "scope": "RUN_AND_BUILD_TIME",
          "value": "${DB_PASSWORD}"
        }
      ]
    }
  ]
}
